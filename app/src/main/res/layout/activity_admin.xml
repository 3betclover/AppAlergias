<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvAgregarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stAgregarProducto"
        android:textSize="24sp"
        android:textColor="@color/foreground"
        android:fontFamily="@font/mono_normal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/llProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/btnAgregarMasCampos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stAgregarMasCampos"
        android:textSize="18sp"
        android:backgroundTint="@color/btnBack"
        android:textColor="@color/btnText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/mono_normal"
        android:contentDescription="@string/stAgregarMasCampos"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnGuardarProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stGuardarProductos"
        android:textSize="18sp"
        android:backgroundTint="@color/btnBack"
        android:textColor="@color/btnText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/mono_normal"
        android:contentDescription="@string/stGuardarProductos"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>